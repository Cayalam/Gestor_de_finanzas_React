# ========================================
# Variables de entorno para Railway
# ========================================

# Django Core Settings
# Genera una SECRET_KEY ejecutando: python generate_secret_key.py
SECRET_KEY=tu-clave-secreta-super-segura-cambiar-por-una-real

# DEBUG - Siempre False en producción
DEBUG=False

# ALLOWED_HOSTS - Dominios permitidos (separados por coma)
# Para Railway usa: .railway.app
# Para dominio personalizado: .railway.app,tudominio.com
ALLOWED_HOSTS=.railway.app

# ========================================
# Base de Datos PostgreSQL
# ========================================

# DATABASE_URL - Railway la genera automáticamente
# Usar referencia en Railway: DATABASE_URL=${{Postgres.DATABASE_URL}}
# Formato: postgresql://usuario:password@host:puerto/database
DATABASE_URL=postgresql://postgres:password@containers-us-west.railway.app:5432/railway

# ========================================
# Seguridad Web
# ========================================

# CSRF_TRUSTED_ORIGINS - URLs de confianza para CSRF (separadas por coma)
# Incluye el dominio del backend
CSRF_TRUSTED_ORIGINS=https://tu-backend.railway.app

# CORS_ALLOWED_ORIGINS - Orígenes permitidos para el frontend (separados por coma)
# Incluye todas las URLs desde donde se accederá al API
CORS_ALLOWED_ORIGINS=https://tu-frontend.railway.app,https://tudominio.com

# ========================================
# Configuración Opcional PostgreSQL
# ========================================
# Solo si necesitas configurar manualmente (Railway lo hace automáticamente)
# PGHOST=containers-us-west-xxx.railway.app
# PGPORT=5432
# PGDATABASE=railway
# PGUSER=postgres
# PGPASSWORD=xxxxx

# ========================================
# Notas Importantes
# ========================================
# 1. NO subas este archivo con valores reales a GitHub
# 2. En Railway, configura estas variables en Settings → Variables
# 3. Para DATABASE_URL usa referencia: ${{Postgres.DATABASE_URL}}
# 4. Asegúrate de incluir https:// en CSRF_TRUSTED_ORIGINS y CORS_ALLOWED_ORIGINS
